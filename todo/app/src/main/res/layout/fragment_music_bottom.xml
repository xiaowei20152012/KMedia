<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/music_head_iv"
        android:layout_width="@dimen/music_iv_item_height"
        android:layout_height="@dimen/music_iv_item_height"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="nihao" />

        <TextView
            android:id="@+id/music_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="hello" />
    </LinearLayout>

    <ImageView
        android:id="@+id/music_pre_iv"
        android:layout_width="@dimen/music_iv_item_height"
        android:layout_height="@dimen/music_iv_item_height"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/music_pause_iv"
        android:layout_width="@dimen/music_iv_item_height"
        android:layout_height="@dimen/music_iv_item_height"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/music_next_iv"
        android:layout_width="@dimen/music_iv_item_height"
        android:layout_height="@dimen/music_iv_item_height"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>
